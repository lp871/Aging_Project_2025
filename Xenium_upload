#!/bin/bash
# 定义路径
SRC="/zp1/data/plyu3/Xenium5k_Mouse/New/Region4"


SRC="/zp1/data/plyu3/Xenium5k_Mouse/OSK_New/Region3"
SRC="/zp1/data/plyu3/Xenium5k_Mouse/OSK_New/Region4"

DEST="/zp1/data/plyu3/Xenium5k_Mouse/Aging_Upload"

# 确保目标目录存在
mkdir -p "$DEST"

# 必须上传的最小可复现集文件列表
FILES=(
  "experiment.xenium"
  "gene_panel.json"
  "cell_feature_matrix.h5"
  "cells.csv.gz"
  "transcripts.parquet"
  "cells.zarr.zip"
  "cell_boundaries.csv.gz"
  "nucleus_boundaries.csv.gz"
  "morphology.ome.tif"
)

# 循环复制并重命名
for f in "${FILES[@]}"; do
  if [ -f "$SRC/$f" ]; then
    cp "$SRC/$f" "$DEST/OSKRegion4_${f}"
    echo "Copied $f -> $DEST/OSKRegion4_${f}"
  else
    echo "WARNING: $SRC/$f not found, skipped."
  fi
done

echo "✅ Done. Files copied to $DEST"


