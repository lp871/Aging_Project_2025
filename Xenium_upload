#!/bin/bash
# 工作目录
cd /zp1/data/plyu3/Xenium5k_Mouse/Aging_Upload || exit

# 遍历所有前缀（提取文件名前的第一段，假设下划线前部分唯一标识 sample）
for prefix in $(ls | sed 's/_.*//' | sort -u); do
  echo "打包 Sample: $prefix"

  # 找出该 sample 的所有文件
  files=$(ls ${prefix}_* 2>/dev/null)

  if [ -n "$files" ]; then
    tar -czf ${prefix}_RAW.tar.gz $files
    echo "✅ 已生成 ${prefix}_RAW.tar.gz"
  else
    echo "⚠️ 没找到 $prefix 对应的文件"
  fi
done



